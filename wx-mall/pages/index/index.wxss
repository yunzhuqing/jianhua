/* pages/indexv2/indexv2.wxss */
.container {
  padding-top: 0rpx;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.item-header-title {
  padding-left: 20rpx;
  font-size: 45rpx;
  font-family:'Courier New', Courier, monospace;
}

.item-header .more {
  font-size: 30rpx;
}


.maps {
  width:50rpx;
  height:50rpx;
  float: left;
}

.top {
  height: 80rpx;
  padding-left: 20rpx;
  padding-top: 5rpx;
  background: white
}

.top .city {
  width: 8%;
  font-size: 5rpx;
  margin-left: 20rpx;
  padding-top: 10rpx;
  float: left;
}


.top .search {
  width: 50%;
  height: 50rpx;
  border-style:solid;
  border-width:2px;
  border-radius: 5rpx;
  font-size: 40rpx;
  margin-left: 35rpx;
  float: left;
}

.top button {
  width: 15%;
  height: 55rpx;
  font-size: 25rpx;
  background: white;
  border-style:solid;
  border-width:1px;
}

.suggest {
  height: 480rpx;
  width: 100%;
  margin-top: 20rpx;
  background: white;
}

.suggest scroll-view {
  width:100%;
  height:400rpx;
  display:flex;
  white-space: nowrap;
  margin-top: 20rpx;
}

.suggest-item {
  width:140px;
  height:180px;
  background:white;
  display:inline-block;
  margin-left: 20rpx;
  padding-top: 2%;
  padding-left: 2%;
}

.suggest-item-pic {
  width: 95%;
  height: 70%;
  box-shadow:1px 1px 1px #aaaaaa;
}

.suggest-item-bottom {
  width: 95%;
}

.suggest-item-bottom-item {
  width: 20%;
  height: 10%;
  margin-left: 5%;
  font-size: 25rpx;
}

#label_green {
  height: 20%;
  width: 240rpx;
}

.common-scene {
  height: 250rpx;
  background: white;
  margin-top: 20rpx;
}

.common-scene .scene {
  padding-top: 20rpx;
  background:white;
  height: 200rpx;
}

.scene-item {
  width: 20%;
  height: 50rpx;
  background: hsl(0, 43%, 60%);
  display: inline-block;
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 25rpx;
}

.nearest-distince {
  height: 480rpx;
  margin-top: 30rpx;
  background: white;
}

.nearest-distince scroll-view {
  width: 100%;
  height: 400rpx;
  display: flex;
  white-space: nowrap;
  margin-top: 20rpx;
}

.other {
  height: 160rpx;
  background: white;
  margin-top: 20rpx;
}

.other .choice {
  width: 100%;
  height: 100%;
}

.other .choice button {
  width: 25%;
  height: 40%;
  background: hsl(0, 43%, 60%);
  display: inline-block;
  margin-top: 2%;
  margin-left: 5%;
  font-size: 30rpx;
}

.gift-goods {
  height: 800rpx;
  margin-top: 20rpx;
  background: white;
}

.gift-goods-item {
  width: 40%;
  height: 300rpx;
  background: green;
  margin-left: 20rpx;
  margin-top: 20rpx;
}