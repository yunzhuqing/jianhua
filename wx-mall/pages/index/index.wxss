/* pages/indexv2/indexv2.wxss */
.container {
  padding-top: 0rpx;
}


.search {
  height: 88rpx;
  width: 100%;
  background: #fff;
  display: flex;
  padding: 0 30rpx;
}

.maps {
  width:50rpx;
  height:50rpx;
  float: left;
}

.search .input {
  width: 690rpx;
  height: 70rpx;
  background: #ededed;
  border-radius: 8rpx;
  padding-left: 20rpx;
  padding-top: 10rpx;
  display: flex;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  margin-left: 30%;
  font-size: 30rpx;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.item-header-title {
  font-size: 45rpx;
  font-family:'Courier New', Courier, monospace;
}

.item-header .more {
  font-size: 30rpx;
}

.top {
  height: 80rpx;
  padding-left: 20rpx;
  padding-top: 5rpx;
  background: white
}

.top .city {
  width: 8%;
  font-size: 25rpx;
  margin-left: 20rpx;
  padding-top: 10rpx;
  float: left;
}


.top .search {
  width: 50%;
  height: 50rpx;
  border-style:solid;
  border-width:2px;
  border-radius: 5rpx;
  font-size: 40rpx;
  margin-left: 35rpx;
  float: left;
}

.top button {
  width: 15%;
  height: 55rpx;
  font-size: 25rpx;
  background: white;
  border-style:solid;
  border-width:1px;
}

.common-suggest {
  padding-left: 3%;
  padding-top: 20rpx;
}

.suggest {
  height: auto;
  width: 100%;
  margin-top: 20rpx;
  margin-left: 20rpx;
  background: white;
}

.suggest scroll-view {
  width:100%;
  height:400rpx;
  display:flex;
  white-space: nowrap;
  margin-top: 20rpx;
}

.suggest-item {
  width:140px;
  height:180px;
  background:white;
  display:inline-block;
  margin-left: 20rpx;
  padding-top: 2%;
}

.suggest-item-pic {
  width: 100%;
  height: 75%;
  box-shadow:1px 1px 1px #aaaaaa;
}

.suggest-item-bottom {
  width: 95%;
}

.suggest-item-bottom-item {
  width: 20%;
  height: 10%;
  margin-left: 5%;
  font-size: 25rpx;
}

#label_green {
  height: 20%;
  width: 240rpx;
}

.common-scene {
  height: 100rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.scene-item {
  width: 140rpx;
  height: 60rpx;
  display: inline-block;
  margin-top: 10rpx;
  margin-left: 5%;
  text-align: center;
  padding-top: 17rpx;
  font-size: 25rpx;
  color: white;
  border-radius:20px;
}

.scene-item-0 {
  background: hsl(355, 98%, 50%);
}

.scene-item-1 {
  background: orange;
}

.scene-item-2 {
  background:rgb(71, 168, 247);
}

.scene-item-3 {
  background: purple;
}

.nearest-distince {
  height: 480rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  background: white;
}

.nearest-distince scroll-view {
  width: 100%;
  height: 400rpx;
  display: flex;
  white-space: nowrap;
  margin-top: 20rpx;
}

.other {
  height: 160rpx;
  background: white;
  margin-top: 20rpx;
}

.other .choice {
  width: 100%;
  height: 100%;
}

.other .choice button {
  width: 25%;
  height: 40%;
  background: hsl(0, 43%, 60%);
  display: inline-block;
  margin-top: 2%;
  margin-left: 5%;
  font-size: 30rpx;
}

.gift-goods {
  height: 800rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  background: white;
}

.gift-goods-item {
  width: 48%;
  height: 400rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  box-shadow:1px 1px 1px #aaaaaa;
}

.gift-goods-pic {
  width: 100%;
  height: 300rpx;
}

.goods-bottom-font {
  color: rgb(94, 73, 73);
  margin-left: 5%;
}